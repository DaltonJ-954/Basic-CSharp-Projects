<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;
    0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<body>

    <style>
        /* Style for the toggler button */
        .navbar-toggler {
            background-color: #007bff; /* Blue background */
            border: 2px solid #0056b3; /* Darker blue border */
            border-radius: 5px; /* Rounded corners */
            padding: 10px; /* Padding for the button */
        }

            .navbar-toggler:hover {
                background-color: #0056b3; /* Darker blue on hover */
                border-color: #003f7f; /* Even darker blue border on hover */
            }

        /* Style for the toggler icon */
        .navbar-toggler-icon {
            width: 25px; /* Icon width */
            height: 3px; /* Icon height */
            background-color: #ffffff; /* White color for the bars */
            display: block;
            margin: 5px 0; /* Spacing between bars */
        }

        /* Additional styling for a clean appearance */
        .navbar-toggler:focus {
            outline: none; /* Remove default outline */
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.75); /* Add blue shadow on focus */
        }
    </style>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/Index">
                <img src="https://www.adazing.com/wp-content/uploads/2019/02/stacked-book-clipart-11.png"
                     style="width: 35px; height: 35px; padding-left: 10px;"
                     alt="Book" />
                <span style="padding-left: 10px">eBook Online</span>
            </a>
            <!-- Toggler button for collapse -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Collapsible content -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Genre/Add">Genre</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Author/Add">Author</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Publisher/Add">Publisher</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Book/Add">Book</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container">
        @RenderBody()
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toggler = document.querySelector('.navbar-toggler');
            const navbarCollapse = document.querySelector('#navbarNav');

            toggler.addEventListener('click', function () {
                const isCollapsed = navbarCollapse.classList.contains('show');
                if (isCollapsed) {
                    navbarCollapse.classList.remove('show');
                } else {
                    navbarCollapse.classList.add('show');
                }
            });
        });
    </script>
</body>
</html>
