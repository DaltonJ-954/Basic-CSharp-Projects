@model eBookShop.Models.Domain.Publisher;
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Add Publisher</h3>
            <form asp-action="Add" method="post">

                <div class="form-group">
                    <label asp-for="PublisherName">PublisherName *</label>
                    <input type="text" class="form-control" asp-for="PublisherName" />
                    <span asp-validation-for="PublisherName" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null){
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }

                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark"><i class="bi bi-save"></i>  Save</button>
                    <a href="/Publisher/GetAll" class="btn btn-primary"><i class="bi bi-list"></i>  List</a>
                </div>

            </form>

            <div>
                <img src="https://th.bing.com/th/id/R.65c656427fb3c1f8a654b4a86390dcb3?rik=Km7ThFZnTvOVhg&riu=http%3a%2f%2fdeniseleeyohn.com%2fwp-content%2fuploads%2f2015%2f01%2f02_Book_Publishing.jpg&ehk=%2f2%2fYSuMEsfzt8cxhPTSGNmQOLlfdAzV29BidEkO%2fGuE%3d&risl=&pid=ImgRaw&r=0" />
            </div>
        </div>
    </div>
</div>

