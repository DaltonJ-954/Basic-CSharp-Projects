@model AmericaWalks.UI.Models.AddLocationViewModel

@{
}


<h1 class="mt-3">Add Location</h1>

<form method="post" class="mt-3">

    <div class="mt-3">
        <label class="form-label">Code</label>
        <input type="text" class="form-control" asp-for="Code"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Walk Location</label>
        <select class="form-control" asp-for="WalkLocation" asp-items="Html.GetEnumSelectList<AmericaWalksApi.Models.Domain.WalksByState>()">
            <option value="">-- Select Walk Location --</option>
        </select>
    </div>

    <div class="mt-3">
        <label class="form-label">LocationImageUrl</label>
        <input type="text" class="form-control" asp-for="LocationImageUrl"/>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>
