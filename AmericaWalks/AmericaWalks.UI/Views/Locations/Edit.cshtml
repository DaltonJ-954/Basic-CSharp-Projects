@model AmericaWalks.UI.Models.DTO.LocationDto

@{
}


<h1 class="mt-3">Edit Location</h1>

@if (Model is not null)
{
    <form method="post" class="mt-3">

        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Code</label>
            <input type="text" class="form-control" asp-for="Code" />
        </div>

        <div class="mt-3">
            <label class="form-label">Walk Location</label>
            <select class="form-control" asp-for="WalkLocation" asp-items="Html.GetEnumSelectList<AmericaWalksApi.Models.Domain.WalksByState>()">
                <option value="">-- Select Walk Location --</option>
            </select>
        </div>

        <div class="mt-3">
            <label class="form-label">LocationImageUrl</label>
            <input type="text" class="form-control" asp-for="LocationImageUrl" />
        </div>

        <div class="mt-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" asp-controller="Locations"
                asp-action="Delete"
                class="btn btn-danger">Delete</button>
        </div>

    </form>
}


